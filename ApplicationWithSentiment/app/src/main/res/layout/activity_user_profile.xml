<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".UserProfile">

    <ImageView
        android:id="@+id/UserIcon"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="145dp"
        android:layout_marginLeft="145dp"
        android:layout_marginTop="35dp"
        android:layout_marginEnd="145dp"
        android:layout_marginRight="145dp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        tools:srcCompat="@tools:sample/avatars" />

    <TextView
        android:id="@+id/UserName"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="180dp"
        android:layout_marginLeft="180dp"
        android:layout_marginTop="6dp"
        android:layout_marginEnd="180dp"
        android:layout_marginRight="180dp"
        android:text="User Name"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/UserIcon" />

    <ScrollView
        android:layout_width="355dp"
        android:layout_height="503dp"
        android:layout_marginStart="28dp"
        android:layout_marginLeft="28dp"
        android:layout_marginTop="42dp"
        android:layout_marginEnd="28dp"
        android:layout_marginRight="28dp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/UserName">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical" >

            <Button
                android:id="@+id/btn_Avg_Emotion"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="My Average Emotion"
                app:backgroundTint="#D81818" />

            <Button
                android:id="@+id/Btn_Change_Username"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Change Username"
                app:backgroundTint="#972B2B" />

            <Button
                android:id="@+id/btn_Change_Avi"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Change profile Picture"
                app:backgroundTint="#733333" />

            <Button
                android:id="@+id/btn_Block_List"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="View Block List"
                app:backgroundTint="#000000" />

            <Button
                android:id="@+id/btn_Delete_Account"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Delete Account"
                app:backgroundTint="#000000" />

            <Button
                android:id="@+id/btn_Report_Bug"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Report a bug!"
                app:backgroundTint="#216860" />

            <Button
                android:id="@+id/btn_Help"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Help"
                app:backgroundTint="#32A195" />
        </LinearLayout>
    </ScrollView>

    <Button
        android:id="@+id/btn_Back_From_Profile"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="8dp"
        android:layout_marginLeft="8dp"
        android:layout_marginTop="8dp"
        android:text="Back"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

</androidx.constraintlayout.widget.ConstraintLayout>